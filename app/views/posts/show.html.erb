<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">
    	<h3 class="panel-title"><%= @post.title %></h3>
	</div> 
	<div class="panel-body">
  		<%= @post.body %>
	</div>
</div>

<p>Created at: <%= @post.created_at %>, by: <%= %></p><br>




<div class="btn-group" role="group">
  <button type="button" class="btn btn-default"><%= link_to "Back", posts_path %></button>
  <button type="button" class="btn btn-default"><%= link_to "Edit", edit_post_path %></button>
</div>

